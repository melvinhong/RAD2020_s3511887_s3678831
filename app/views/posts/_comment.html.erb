<%= form_for(Comment.new) do |f| %>

<div class="form-group">
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <%= f.text_area :content, class: 'form-control', :rows => 8, placeholder: 'Enter Your Comment Here', class: "tinymce"%>
</div>

<div class="row">
  <div class="col-sm-4">
    <%= f.submit "Comment" ,class: 'btn btn-success my-2'%>
  </div>
</div>

<%end%>
